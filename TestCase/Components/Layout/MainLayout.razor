@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@inject AuthenticationStateProvider AuthenticationStateProvider

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3 mr-3">Application</MudText>
        <MudButton Href="/" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Home">首页</MudButton>
        <MudButton Href="/users" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.People">用户管理</MudButton>
        <MudSpacer />
        <MudButton Href="/login" Color="Color.Inherit">登录</MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>